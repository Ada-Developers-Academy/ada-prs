$(document).on('turbolinks:load', function() {
  // Don't load epicediotr unless there's an editor on this page.
  if ($('#epiceditor').length) {
    new EpicEditor({
      clientSideStorage: false,
      theme: {
        editor: '<%= asset_path 'editor/epic-light.css' %>'
      },
      autogrow: {
        minHeight: 500
      }
    }).load();
  }
});
