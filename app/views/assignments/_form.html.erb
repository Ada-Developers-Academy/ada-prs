<%= form_for(@assignment) do |f| %>
  <legend>Assignment Properties</legend>

  <!-- Errors -->
  <% if @assignment.errors.any? %>
    <div class="bg-danger">
      <ul>
        <% @assignment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="form-group row">
      <%= f.label :classroom, class: "col-form-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.collection_select(:classroom_ids, Classroom.all, :id, :display_name, {}, {class: "form-control", multiple: true, size: @max_size }) %>
        <small class="form-text text-muted">Select all that apply.</small>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :repo_url, class: "col-form-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :repo_url, class: "form-control", type: "text", placeholder: "Ada-CX/Name" %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label "Individual Project", class: "col-form-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.check_box :individual %>
      </div>
    </div>
  </fieldset>
  <div class="control-group">
    <%= f.submit %>
  </div>
<% end %>
