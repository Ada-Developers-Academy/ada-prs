<%= form_tag repo_student_feedback_index_path, :class => 'form-horizontal' do %>
<fieldset>
  <legend>
    Submit Feedback for <%= @student_name %> on
    <%= link_to @repo.repo_url, @submission.pr_url, :target => "blank" %>
  </legend>
  <div class="control-group">
    <div id="epiceditor" aria-label="Enter feedback comments for the project submission">
      <%= text_area_tag "feedback[comments]", @feedback_template, size: "100x15" %>
    </div>
  </div>
</fieldset>
<div class="control-group">
  <%= submit_tag "Submit" %>
</div>
<% end %>
