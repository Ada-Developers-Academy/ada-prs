<%= form_for(@student, html: { class: "form-horizontal" } ) do |f| %>
  <legend>Student Info</legend>
  <div class="control-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="control-group">
    <%= f.label :cohort, class: "control-label"  %>
    <%= f.collection_select(:cohort_id, Cohort.all, :id, :display_name, class: "form-control") %>
  </div>
  <div class="control-group">
    <%= f.label :github_name, class: "control-label"  %>
    <%= f.text_field :github_name, class: "form-control" %>
  </div>
  <div class="control-group">
    <%= f.label :email, class: "control-label"  %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <br>
  <div class="control-group">
    <div class="controls">
    <%= f.submit %>
  </div>
  </div>
<% end %>
